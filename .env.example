# Groq AI
GROQ_API_KEY=your_groq_api_key_here

# MongoDB - Learning Path Database (para consultar roadmaps de usuarios)
MONGO_LEARNING_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
